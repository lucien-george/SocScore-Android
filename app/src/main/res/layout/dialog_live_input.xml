<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_blurry"
    android:gravity="center|top"
    android:id="@+id/live_input_dialog_layout">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/close_live_dialog"
        android:onClick="close_live_dialog"
        android:background="@drawable/close_pop_up_gray"
        android:layout_gravity="right|top"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Team 1"
            android:id="@+id/et_team1"
            android:layout_marginLeft="16dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_team2"
            android:hint="Team 2"
            android:layout_marginRight="16dp"
            android:layout_gravity="right" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a new match"
        android:onClick="createNewMatch"
        android:id="@+id/create_new_match_button_live_dialog"
        android:backgroundTint="@android:color/transparent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Access live match"
        android:id="@+id/access_live_match_button_live_dialog"
        android:backgroundTint="@android:color/transparent"
        android:onClick="accessLiveMatch"/>

</LinearLayout>